---
import Layout from '~/layouts/PageLayout.astro';
import SectionLayout from '~/layouts/SectionLayout.astro';
import SectionLayoutWithBackground from '~/layouts/SectionLayoutWithBackground.astro';

import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';
import { Icon } from 'astro-icon/components';

import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'HR Manager',
};
---

<Layout metadata={metadata}>
  <SectionLayoutWithBackground
    src="/src/assets/images/2_women_discussing.jpg"
    preload="jpg"
    blur={0.4}
    brightness={0.6}
    classes={{
      container: 'text-white',
    }}
  >
    <div class="flex flex-col md:flex-row gap-12 md:gap-20">
      <div class="basis-1/2 flex flex-col justify-center">
        <div class="flex flex-col gap-3 md:gap-6">
          <h1 class="text-secondary">Manage Operations with Excellence Using Markular’s HR Module</h1>
          <div class="">
            <p class="text-lg">
              Markular’s HR Management Module boosts efficiency and compliance in workforce management. Transform your
              HR department to meet the dynamic needs of the oil, gas, energy, and maritime sectors.
            </p>
          </div>
          <div class="flex mt-10 md:mt-4 md:mb-0">
            <Button variant="primary" text="Book Demo" href="/contact#contact-form" class="text-base" />
          </div>
        </div>
      </div>
    </div>
  </SectionLayoutWithBackground>

  <SectionLayout classes={{ background: 'bg-gradient-to-b from-myellow-100 via-white to-white' }}>
    <div class="flex flex-col gap-12 md:gap-20">
      <div class="md:w-[48rem]">
        <p class="font-bold text-base mb-4">Empowering Excellence</p>
        <h2 class="mb-6">Maximize Your Team’s Potential for Unmatched Success</h2>
        <p class="text-lg">
          Markular’s HR module enhances resource allocation, secures personnel data, and fosters employee connections.
          Our innovative platform empowers medium to large enterprises to streamline HR processes and boost
          productivity.
        </p>
      </div>
      <div class="flex flex-col gap-4 md:gap-12">
        <div class="flex flex-col md:flex-row gap-12">
          <div class="basis-1/3 flex flex-col gap-4 md:gap-6">
            <Icon name="marktopright" class="text-[3rem] text-primary" />
            <h4>Full Organizational Overview</h4>
            <p class="text-base">Efficiently select the right person for each job.</p>
          </div>

          <div class="basis-1/3 flex flex-col gap-4 md:gap-6">
            <Icon name="marktopright" class="text-[3rem] text-primary" />
            <h4>Handle Personal Data Securely</h4>
            <p class="text-base">Ensure the best team composition for maximum productivity.</p>
          </div>

          <div class="basis-1/3 flex flex-col gap-4 md:gap-6">
            <Icon name="marktopright" class="text-[3rem] text-primary" />
            <h4>Foster Meaningful Employee Connections</h4>
            <p class="text-base">Enhance collaboration and communication across your team.</p>
          </div>
        </div>
        <div>
          <Button
            variant="secondary"
            text="Book Demo"
            href="/contact#contact-form"
            class="mt-10 md:mt-4 md:mb-0 text-base"
          />
        </div>
      </div>
    </div>
  </SectionLayout>

  <SectionLayout
    classes={{
      background: 'bg-white',
    }}
  >
    <div class="flex flex-col lg:flex-row gap-6 md:gap-20">
      <div class="basis-1/2 flex flex-col md:gap-8">
        <h3 class="basis-1/2">Boost Employee Engagement and Streamline HR Management</h3>
      </div>
      <div class="basis-1/2 flex flex-col gap-6 md:gap-8">
        <div class="basis-1/2 flex text-lg">
          Markular boosts productivity and efficiency with comprehensive HR management tools.
        </div>
        <div class="basis-1/2 flex gap-6">
          <div class="basis-1/2 flex flex-col gap-4">
            <h2>18%</h2>
            <p class="text-base">Increase team productivity by 18% with a streamlined resource selection process.</p>
          </div>
          <div class="basis-1/2 flex flex-col gap-4">
            <h2>23%</h2>
            <p class="text-base">Optimize team composition by 23% for maximum efficiency and productivity.</p>
          </div>
        </div>
      </div>
    </div>
  </SectionLayout>

  <SectionLayout
    classes={{
      background: 'bg-white',
    }}
  >
    <div class="flex flex-col lg:flex-row gap-6 md:gap-20">
      <div class="basis-1/2 flex flex-col md:flex-row md:items-center gap-12 md:gap-20">
        <div class="flex flex-col gap-6">
          <h3>Nurture Your Workforce with Our Comprehensive HR Management Solution</h3>
          <p class="text-lg">
            Our HR module assigns best-fit personnel for optimal team performance, streamlining employee data management
            to enhance productivity and foster a supportive work environment.
          </p>
        </div>
      </div>

      <div class="basis-1/2 flex flex-col justify-center h-[40rem]">
        <Image
          class="min-w-full flex-1"
          widths={[400, 768, 1024, 2040]}
          sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
          loading="eager"
          width={1024}
          height={640}
          src="~/assets/images/meeting_in_yellow_room.jpg"
          alt="People in a meeting room"
        />
      </div>
    </div>
  </SectionLayout>

  <SectionLayout>
    <div class="flex flex-col gap-6 md:gap-20">
      <div class="flex flex-col md:flex-row gap-6 md:gap-20">
        <div class="basis-1/2 flex flex-col md:gap-8">
          <h3 class="basis-1/2">Simplify Leave Management with Markular’s HR Solution</h3>
        </div>
        <div class="basis-1/2 flex flex-col gap-6 md:gap-8 text-lg">
          Save time with precise tracking and reporting of employee leave. Our HR module centralizes and streamlines
          leave management, enhancing planning and workforce management.
        </div>
      </div>

      <div class="w-full flex justify-center">
        <Image
          class="min-w-full"
          widths={[400, 768, 1024, 2040]}
          sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
          loading="eager"
          width={1024}
          height={576}
          src="~/assets/images/presentation_on_tablet.jpeg"
          alt="Person giving a presentation on a tablet"
        />
      </div>
    </div>
  </SectionLayout>

  <SectionLayout
    classes={{
      background: 'bg-white',
    }}
  >
    <div class="flex flex-col lg:flex-row gap-6 md:gap-20">
      <div class="basis-1/2 flex flex-col gap-3 md:gap-6">
        <div class="flex-1 flex flex-col justify-center gap-3 md:gap-6">
          <div class="flex flex-col gap-4 md:gap-8">
            <div>
              <p class="font-bold text-base mb-4">Efficiency</p>
              <h2 class="mb-6">Streamline HR Tasks with Comprehensive Management Tools</h2>
              <p class="text-lg">
                Streamline HR management with our module. From efficient recruitment to seamless performance
                evaluations, manage your workforce with ease and precision.
              </p>
            </div>
            <div class="flex gap-6">
              <div class="basis-1/2 flex flex-col gap-4">
                <h6>Enhance Efficiency</h6>
                <p class="text-base">
                  Our HR module makes it effortless to handle recruitment, performance management, and more.
                </p>
              </div>
              <div class="basis-1/2 flex flex-col gap-4">
                <h6>Boost Productivity</h6>
                <p class="text-base">
                  Optimize HR tasks with our solutions to boost team productivity and ensure your workforce operates at
                  peak efficiency.
                </p>
              </div>
            </div>
          </div>
          <div>
            <Button variant="secondary" text="Book Demo" href="/contact#contact-form" class="mt-4 md:mb-0 text-base" />
          </div>
        </div>
      </div>

      <div class="basis-1/2 flex justify-center h-[40rem]">
        <Image
          class="min-w-full"
          widths={[400, 768, 1024, 2040]}
          sizes="(max-width: 767px) 400px, (max-width: 1023px) 768px, (max-width: 2039px) 1024px, 2040px"
          loading="eager"
          width={1024}
          height={640}
          src="~/assets/images/rig_in_ocean_long_shot.jpeg"
          alt="Rig in the ocean"
        />
      </div>
    </div>
  </SectionLayout>

  <SectionLayout>
    <CallToAction />
  </SectionLayout>
</Layout>
