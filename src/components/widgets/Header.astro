---
import { Icon } from 'astro-icon/components';
import Logo from '~/components/Logo.astro';
import ToggleMenu from '~/components/common/ToggleMenu.astro';
import Button from '~/components/ui/Button.astro';

import { getHomePermalink } from '~/utils/permalinks';
import { trimSlash } from '~/utils/permalinks';
import type { CallToAction } from '~/types';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

interface ActionLink extends CallToAction {}

interface MenuLink extends Link {
  links?: Array<MenuLink>;
}

export interface Props {
  id?: string;
  links?: Array<MenuLink>;
  actions?: Array<ActionLink>;
  isSticky?: boolean;
  isDark?: boolean;
  isFullWidth?: boolean;
  showToggleTheme?: boolean;
  showRssFeed?: boolean;
  position?: string;
}

const {
  id = 'header',
  links = [],
  actions = [],
  // isSticky = false,
  // isDark = false,
  isFullWidth = false,
  position = 'center',
} = Astro.props;

const currentPath = `/${trimSlash(new URL(Astro.url).pathname)}`;
---

<header
  class:list={[
    'sticky top-4 z-40 md:flex h-16 md:h-[4.5rem] border-primary transition-[opacity] ease-in-out',
    'ease-in duration-150 transition-all overflow-hidden md:overflow-visible',
  ]}
  {...id ? { id } : {}}
  data-aw-sticky-header,
>
  <div
    class:list={[
      'relative h-full mx-auto pl-5 pr-3 md:px-16',
      {
        'md:w-[1440px]': !isFullWidth,
      },
    ]}
  >
    <div class="relative bg-white h-full rounded-3xl">
      <div
        class:list={[
          'z-50 relative w-full h-full md:px-4 rounded-3xl border-white md:border-gray border-[1px]',
          {
            'md:flex md:justify-between': position !== 'center',
          },
          {
            'md:grid md:grid-cols-6 md:items-center': position === 'center',
          },
        ]}
      >
        <div
          class="flex justify-between items-center px-4 md:px-0 py-2 md:pt-0 rounded-3xl border-gray border-0 md:border-0"
        >
          <a href={getHomePermalink()} class="text-black">
            <Logo />
          </a>
          <div class="flex items-center md:hidden">
            <Button variant="primary" text={actions[0]?.text} class="md:hidden mx-5 py-1 h-fit text-base w-auto" />
            <div class="md:hidden">
              <ToggleMenu />
            </div>
          </div>
        </div>
        <!-- Navigation Desktop & Mobile -->
        <nav
          class:list={[
            'md:items-center md:w-auto flex overflow-y-auto overflow-x-hidden md:overflow-y-visible md:overflow-x-auto md:justify-self-center md:col-span-4',
            'md:h-full px-4',
          ]}
          aria-label="Main navigation"
        >
          <ul
            class:list={[
              'flex flex-col md:flex-row md:self-center gap-6 md:px-5 text-black max-md:text-2xl',
              'md:h-full w-full md:w-auto ease-in duration-150 transition-all pt-6 md:pt-0',
            ]}
          >
            {
              links.map(({ text, href, links }) => (
                <li
                  class:list={[
                    links?.length ? 'dropdown' : '',
                    'md:h-full px-2 flex items-center border-b-[1px] md:border-b-2 border-gray md:border-white md:hover:border-yellow-700',
                    'ease-in duration-150 transition-all py-2 md:py-0',
                  ]}
                  data-content={text}
                >
                  {links?.length ? (
                    <div class="w-full">
                      <button
                        type="button"
                        class="hover:text-link w-full md:w-auto md:h-full flex items-center justify-between"
                      >
                        {text}{' '}
                        <Icon
                          name="tabler:chevron-down"
                          class="w-6 h-6 ml-0.5 md:inline ease-in duration-150 transition-all"
                        />
                      </button>
                      <ul
                        class:list={[
                          'dropdown-menu-mb md:hidden rounded hidden font-medium md:min-w-[200px] drop-shadow-xl max-md:text-lg',
                          'w-full px-4 py-12 md:bg-white rounded-b-3xl overflow-hidden',
                        ]}
                        data-content={text}
                      >
                        {links.map(({ text: text2, href: href2 }) => (
                          <li class="w-full">
                            <a
                              class:list={[
                                'first:rounded-t last:rounded-b hover:underline pl-2 py-2 block whitespace-no-wrap text-black',
                                { 'aw-link-active': href2 === currentPath },
                                'w-full flex justify-between',
                              ]}
                              href={href2}
                            >
                              {text2}
                              <Icon
                                name="tabler:chevron-right"
                                class="w-4 h-4 ml-0.5 md:inline ease-in duration-150 transition-all text-gray-500"
                              />
                            </a>
                          </li>
                        ))}
                      </ul>
                    </div>
                  ) : (
                    <a
                      class:list={['hover:text-link flex items-center', { 'aw-link-active': href === currentPath }]}
                      href={href}
                    >
                      {text}
                    </a>
                  )}
                </li>
              ))
            }
          </ul>
        </nav>
        <!-- Contact Us -->
        <div class="hidden md:flex md:justify-self-end" id="contactus">
          {
            actions?.length ? (
              <span class="hidden md:flex">
                {actions.map((btnProps) => (
                  <Button {...btnProps} class="text-base px-5 py-2" />
                ))}
              </span>
            ) : (
              ''
            )
          }
        </div>
      </div>

      <div class="z-40 w-full absolute left-0 md:top-[3rem] hidden md:block">
        {
          links.map(({ text, href, links }) =>
            links?.length ? (
              <>
                <ul
                  class:list={[
                    'dropdown-menu md:backdrop-blur-md rounded hidden font-medium md:min-w-[200px] drop-shadow-xl max-md:text-lg',
                    'w-full px-4 py-12 md:bg-white rounded-b-3xl overflow-hidden',
                  ]}
                  data-content={text}
                >
                  {links.map(({ text: text2, href: href2 }) => (
                    <li class="w-1/2">
                      <a
                        class:list={[
                          'first:rounded-t last:rounded-b hover:underline pl-2 py-2 block whitespace-no-wrap text-black',
                          { 'aw-link-active': href2 === currentPath },
                          'w-full flex justify-between',
                        ]}
                        href={href2}
                      >
                        {text2}
                        <Icon
                          name="tabler:chevron-right"
                          class="w-4 h-4 ml-0.5 md:inline ease-in duration-150 transition-all text-gray-500"
                        />
                      </a>
                    </li>
                  ))}
                </ul>
              </>
            ) : null
          )
        }
      </div>
    </div>
  </div>
</header>
