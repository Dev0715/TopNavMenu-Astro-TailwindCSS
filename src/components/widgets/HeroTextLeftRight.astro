---
import { twMerge } from 'tailwind-merge';

export interface Props {
  textLeft?: string;
  textRight?: string;
  classes?: {
    background?: string;
  };
}

const {
  textLeft = await Astro.slots.render('textLeft'),
  textRight = await Astro.slots.render('textRight'),
  classes = {},
} = Astro.props;

const { background = '' } = classes;
---

<section class={twMerge('not-prose', background)}>
  <div class="absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="max-w-7xl mx-auto w-full px-5 md:px-16 py-16 md:py-28">
    <div class="pt-0 pointer-events-none"></div>
    <div class="flex flex-col md:flex-row gap-6 md:gap-20">
      {textLeft && <h1 class="flex-1" set:html={textLeft} />}
      {textRight && <p class="flex-1 text-lg font-fira" set:html={textRight} />}
    </div>
  </div>
</section>
