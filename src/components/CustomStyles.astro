---
import '@fontsource/fira-mono';
import '@fontsource/outfit';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Fira Mono';
    --aw-font-serif: 'Fira Mono';
    --aw-font-heading: 'Outfit';
    --aw-font-button: 'Fira Mono';

    --aw-color-primary: #263201;
    --aw-color-secondary: #e9ff48;
    --aw-color-accent: #fcffc7;

    --aw-color-text-heading: var(--aw-color-primary);
    --aw-color-text-default: var(--aw-color-primary);
    --aw-color-text-muted: var(--aw-color-primary);
    --aw-color-bg-page: #fcffc7;

    --aw-color-bg-page-dark: #fcffc7;

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Fira Mono';
    --aw-font-serif: 'Fira Mono';
    --aw-font-heading: 'Outfit';
    --aw-font-button: 'Fira Mono';

    --aw-color-primary: rgb(1 97 239);
    --aw-color-secondary: rgb(1 84 207);
    --aw-color-accent: rgb(109 40 217);

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229 236 246);
    --aw-color-text-muted: rgb(229 236 246 / 66%);
    --aw-color-bg-page: rgb(3 6 32);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
